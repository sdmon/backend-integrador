<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test de Paginacion de Usuarios</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>

    <div class="container my-5">
      <h1 class="text-center pb-5">Test de Paginacion de Productos</h1>

      <div class="container-flex mx-auto pl-5">
        {{#each products}}
          <li>
            <strong>Nombre: </strong>{{this.title}}
            -
            <strong>Developer: </strong>{{this.description}}
            -
            <strong>Precio: </strong>{{this.price}}
            <form action="/carts/add" method="post">
              
              <input type="hidden" name="cid" value="{{cid}}" />              
              <input type="hidden" name="pid" value="{{this._id}}" />
              <input type="number" name="quantity" value="1" min="1" />
              <button type="submit" class="btn btn-success">Agregar al Carrito</button>
            </form>
          </li>
        {{/each}}
      </div>
      <br />
      <div class="text-center">
        {{#if hasPrevPage}}
          <a
            href="/products?numPage={{prevPage}}"
            class="btn btn-outline-dark"
          >Pagina Anterior</a>
        {{/if}}
        <label>{{page}}</label>
        {{#if hasNextPage}}
          <a
            href="/products?numPage={{nextPage}}"
            class="btn btn-outline-dark"
          >Pagina Siguiente</a>
        {{/if}}
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
    ></script>

  </body>
</html>